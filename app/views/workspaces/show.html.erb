<h1>
  <%= @workspace.name %>
  <small><%= @workspace.description %></small>
</h1>

<%= link_to 'Edit', edit_workspace_path(@workspace) %> |
<%= link_to 'Back', workspaces_path %>

<h2>Tickets</h2>

<ul id="tickets">
  <% @workspace.tickets.all(:order => :created_at).each do |ticket| %>
    <li><%= link_to ticket.subject, ticket %></li>
  <% end %>
  <%= render :partial => 'tickets/form' %>
</ul>