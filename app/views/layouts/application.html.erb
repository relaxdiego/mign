<!DOCTYPE html>
<html>
<head>
  <title>Mign</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag params[:controller], :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
<% if notice %>
<div class="alert alert-success"><%= notice %></div>
<% elsif alert %>
<div class="alert alert-error"><%= alert %></div>
<% end %>

<%= yield %>
</div>

</body>
</html>
