<h2>Sign up to Mign</h2>

<div class="span5 offset3">
  <%= form_for(resource,
               :as   => resource_name,
               :url  => registration_path(resource_name),
               :html => { :class => 'form-horizontal' }) do |f| %>
    <div class="control-group">
      <%= f.label :email, :class => "control-label" %>
      <div class="controls"><%= f.email_field :email %></div>
    </div>

    <div class="control-group">
      <%= f.label :password, :class => "control-label" %>
      <div class="controls"><%= f.password_field :password %></div>
    </div>

    <div class="control-group">
      <%= f.label :password_confirmation, :class => "control-label" %>
      <div class="controls"><%= f.password_field :password_confirmation %></div>
    </div>

    <div class="form-actions">
      <%= f.submit "Sign up", :id => "login", :class => "btn btn-primary" %>
    </div>
  <% end %>

  <div id="other-links">
    <%= render "links" %>
  </div>
</div>