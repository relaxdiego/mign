<h2>Sign up to Mign</h2>

<div class="span5 offset3">
  <%= form_for(resource,
               :as   => resource_name,
               :url  => registration_path(resource_name),
               :html => { :class => 'form-horizontal' }) do |f| %>
    <div class="control-group">
      <%= f.label :email, :class => "control-label" %>
      <div class="controls"><%= f.email_field :email, :id => 'email' %></div>
    </div>

    <div class="control-group">
      <%= f.label :first_name, :class => "control-label" %>
      <div class="controls"><%= f.text_field :first_name, :id => 'first_name' %></div>
    </div>

    <div class="control-group">
      <%= f.label :last_name, :class => "control-label" %>
      <div class="controls"><%= f.text_field :last_name, :id => 'last_name' %></div>
    </div>

    <div class="control-group">
      <%= f.label :password, :class => "control-label" %>
      <div class="controls"><%= f.password_field :password, :id => 'password' %></div>
    </div>

    <div class="control-group">
      <%= f.label :password_confirmation, :class => "control-label" %>
      <div class="controls"><%= f.password_field :password_confirmation,
          :id => 'password_confirmation' %></div>
    </div>

    <div class="form-actions">
      <%= f.submit "Sign up", :id => "sign_up", :class => "btn btn-primary" %>
    </div>
  <% end %>

  <div id="other-links">
    <%= render "links" %>
  </div>
</div>